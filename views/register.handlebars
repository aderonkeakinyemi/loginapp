<h2 class="page-header">Register</h2>
{{#if errors}}
		{{#each errors}}
			<div class="alert alert-danger">{{msg}}</div> 
		{{/each}}
{{/if}}
<form method="post" action= "/users/register">
<div class = "form-group"> 
<label> Name </label>
<input class="form-control" type="text" placeholder="Name" name="name"></input>
</div>

<div class = "form-group"> 
<label> Username </label>
<input class="form-control" type="text" placeholder="Username" name ="username"></input>
</div>

<div class = "form-group"> 
<label> Email </label>
<input class="form-control" type="text" placeholder="Email" name="email"></input>
</div>


<div class = "form-group"> 
<label> password </label>
    <input class="form-control" type="password" placeholder="Password" name="password"></input>
</div>

<div class = "form-group"> 
<label> confirm password </label>
    <input class="form-control" type="password" placeholder="Confirm Password" name="passwordtwo"/>
</div>

<button type = "Submit" class = "btn btn-default">Submit </button>
</form>
